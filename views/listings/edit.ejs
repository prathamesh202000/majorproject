<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-md-8 offset-2">    
    <h1 class="mt-3 mb-3">Edit Listing</h1>
    <form action="/listing/<%= listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" required id="title" name="listing[title]" placeholder="Enter the title" value="<%= listing.title %>" class="form-control">
            <div class="valid-feedback">
                Title Looks good!
              </div>    
        </div>
            <div class="mb-3">
                <label for="description" class="form-label" >Description</label>
                <textarea id="description" required name="listing[description]" placeholder="Enter the Description" class="form-control"><%= listing.description %></textarea>    
                <div class="invalid-feedback">
                    Please enter a short description
                  </div>
                </div>
                <div class="mb-3">
                    <label for="image-preview" class="form-label">Preview of Original Image</label><br>
                    <img class="image-preview" src="<%= originalImageUrl %>" alt="Original image-preview">
                      
                </div>
            <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" id="image" name="listing[image]" class="form-control">
              
        </div>
            <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price"  class="form-label">Price</label>
                <input type="number" required id="price" name="listing[price]" placeholder="Enter price" value="<%= listing.price %>" class="form-control">
                <div class="invalid-feedback">
                    Price should be valid
                  </div>     
            </div>    
            <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" id="country" required name="listing[country]" value="<%= listing.country %>" placeholder="Enter the country" class="form-control">
            <div class="invalid-feedback">
                Country name should be valid
              </div>    
        </div>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="category" class="form-label">Category</label>
                <select name="listing[category]" required id="category" class="form-control">
                    <!-- "Farm","Trending","Rooms","Iconic Cities",
                        "Mountains","Castles","Amazing Pools",
                        "Camping","Arctic","Domes","Boat"] -->
                    <option value="Trending">Trending</option>
                    <option value="Farm">Farm</option>
                    <option value="Rooms">Rooms</option>
                    <option value="Iconic Cities">Iconic Cities</option>
                    <option value="Mountains">Mountains</option>
                    <option value="Castles">Castles</option>
                    <option value="Amazing Pools">Amazing Pools</option>
                    <option value="Camping">Camping</option>
                    <option value="Arctic">Arctic</option>
                    <option value="Domes">Domes</option>
                    <option value="Boat">Boat</option>
                </select>    
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" required name="listing[location]" value="<%= listing.location %>" placeholder="Enter the location" class="form-control">
                <div class="invalid-feedback">
                    Location should be valid
                  </div>    
            </div>
        </div>        
                <button type="submit" class="btn btn-dark edit-btn mb-4 mt-3">Save</button>
    </form>
</div></div>
<script src="/js/script.js"></script>
</body>
